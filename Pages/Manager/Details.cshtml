        <form method="post">
            <div class="col-md-4">

            </div>
            <input type="hidden" asp-for="LeavePermissionRequest.Id" />

            <div class="form-group">
                <label asp-for="Input.StatusId" class="control-label">Action Status</label>
                <select asp-for="Input.StatusId" class="form-control" asp-items="ViewBag.RequestStatus"></select>
                <span asp-validation-for="Input.StatusId" class="text-danger"></span>
            </div>
            <td>
                <div class="form-group">
                    <label asp-for="Input.ManagerNote" class="control-label">Manager Note </label>
                    <input asp-for="Input.ManagerNote" class="form-control" />
                    <span asp-validation-for="Input.ManagerNote" class="text-danger"></span>
                </div>
            </td>

            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-success" />
            </div>
        </form>
    </div>


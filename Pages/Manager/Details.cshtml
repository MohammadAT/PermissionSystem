@page
@model PermissionSystem.Pages.Manager.Details
@{
}

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>


<div>
    <h4>Employee</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeavePermissionRequest.Employee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeavePermissionRequest.Employee.Name)
        </dd>
        <dt class="col-sm-2">

            @Html.DisplayNameFor(model => model.LeavePermissionRequest.TimeFrom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeavePermissionRequest.TimeFrom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeavePermissionRequest.TimeTo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeavePermissionRequest.TimeTo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeavePermissionRequest.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeavePermissionRequest.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeavePermissionRequest.EmployeeNote)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeavePermissionRequest.EmployeeNote)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeavePermissionRequest.RequestReason)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeavePermissionRequest.RequestReason.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeavePermissionRequest.RequestStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeavePermissionRequest.RequestStatus.Name)
        </dd>
    </dl>

    <fieldset class="form-group">
        <legend class="mt-4">Action Status</legend>
        <div class="form-check">
            <label class="form-check-label">
                <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios1" value="option1" checked="">
                Approve
            </label>
        </div>
        <div class="form-check">
            <label class="form-check-label">
                <input type="radio" class="form-check-input" name="optionsRadios" id="optionsRadios2" value="option2">
                Reject
            </label>
        </div>
    </fieldset>
    <div class="form-group">
        <label for="exampleTextarea" class="form-label mt-4">Manager Note</label>
        <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
    </div>

    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-success" />
    </div>
</div>


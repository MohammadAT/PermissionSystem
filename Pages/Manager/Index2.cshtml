@model PermissionSystem.Pages.Manager.Index2Model
@{
}

@{ 
    ViewData["Title"] = "Details";
}

<h1>Details</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LeavePermissionRequest[0].Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeavePermissionRequest[0].TimeFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeavePermissionRequest[0].TimeTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeavePermissionRequest[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeavePermissionRequest[0].EmployeeNote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeavePermissionRequest[0].RequestReason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeavePermissionRequest[0].RequestStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeavePermissionRequest[0].ManagerNote)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LeavePermissionRequest)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeFrom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeTo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeNote)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ManagerNote)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestReason.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestStatus.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.Name)
                </td>
            </tr>

        }
    </tbody>
</table>
